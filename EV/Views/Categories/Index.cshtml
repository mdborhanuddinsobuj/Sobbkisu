@model IEnumerable<EV.Models.Categories>

@{
    ViewBag.Title = "Categories";
}

<div class="row">
    <div class="col s12 m6 l6 offset-m3 offset-l3">
        <div class="card subscriber-list-card animate fadeRight">
            <div class="card-content pb-1">
                <h4 class="card-title mb-0">
                    Available Medicine List
                    <a href="@Url.Action("Create", "Categories")" class="mb-1 btn-floating waves-effect waves-light gradient-45deg-green-teal gradient-shadow float-right">
                        <i class="material-icons" style="line-height:40px">add</i>
                    </a>
                </h4>
            </div>
            <table class="subscription-table responsive-table highlight">
                <thead>
                    <tr>
                        <th> SL# </th>
                        <th> Category </th>
                        <th> Action </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i + 1 }))
                    {
                        <tr id="tr-@item.Index">
                            <td>
                                @item.Index
                            </td>
                            <td>
                                @item.Data.cName
                            </td>
                            <td class="">
                                <a href="@Url.Action("Edit","Categories", new { id=item.Data.cId })">
                                    <i class="material-icons pink-text">edit</i>
                                </a>
                                <a href="@Url.Action("Details","Categories", new { id=item.Data.cId })">
                                    <i class="material-icons pink-text">visibility</i>
                                </a>
                                <a id="btnDelete-@item.Index" class="btnDelete" onclick="return confirm('Are you sure you want to delete this category?')" href="@Url.Action("Delete","Categories", new { id=item.Data.cId })">
                                    <i class="material-icons pink-text">clear</i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>